<h1>following</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:postal_code) %></th>
      <th><%= User.human_attribute_name(:address) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @followings.each do |followed| %>
      <tr>
        <th>
          <% if followed.avatar.attached? %>
            <%= image_tag followed.avatar, :size => '50x50' %>
          <% end %>
        </th>
        <td><%= followed.email %></td>
        <td><%= followed.name %></td>
        <td><%= followed.postal_code %></td>
        <td><%= followed.address %></td>
        <td><%= link_to t('views.common.show'), followed %></td>
      </tr>
    <% end %>
  </tbody>
</table>
