<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @report.body %>
</p>

<h1>日報のコメント</h1>
<%= render 'comments/form', commentable: @report, comment: @report.comments.build %>

<table>
  <thead>
    <tr>
      <th>内容</th>
      <th>ユーザー名</th>
      <th>投稿日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.user.name %></td>
        <td><%= comment.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
