<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:body) %></th>
      <th><%= Report.human_attribute_name(:user_id) %></th>
      <th><%= t('reports.posted.posted_at_date') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @report.title %></td>
      <td><%= @report.body %></td>
      <td><%= @report.user.name.blank? ? @report.user.email : @report.user.name %></td>
      <td><%= l @report.created_at, format: :date %></td>
      <% if @report.user == current_user %>
        <td><%= link_to t('views.common.edit'), edit_report_path(@report) %></td>
        <td><%= link_to t('views.common.destroy'), @report, method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<h1><%= t('comments.show.title', commentable: Report.model_name.human) %></h1>
<%= render 'comments/form', commentable: @report, comment: @report.comments.build %>

<table>
  <thead>
    <tr>
      <th><%= Comment.human_attribute_name(:body) %></th>
      <th><%= Comment.human_attribute_name(:user_id) %></th>
      <th><%= Comment.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.user.name.blank? ? comment.user.email : comment.user.name %></td>
        <td><%= l comment.created_at, format: :long %></td>
      </tr>
    <% end %>
  </tbody>
</table>
